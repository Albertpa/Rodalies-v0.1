<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icono"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/titulo_app"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/autores"
        android:id="@+id/autores"
        android:textSize="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/contacto"
        android:id="@+id/contacto"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:autoLink="email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/fuente"
        android:id="@+id/fuente"
        android:textSize="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:autoLink="web"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/generalitat"
        android:id="@+id/generalitat"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
</LinearLayout><!-- From: file:/Users/albert/Documents/Rodalies-v0.1/app/src/main/res/layout/about.xml -->