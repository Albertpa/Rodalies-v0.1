<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rds.rodalies.NuevaAlarmaNotificacion">

    <!--<Button-->
        <!--android:id="@+id/buttonExample"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="picker timer"-->
        <!--android:onClick="showTimePickerDialog" />-->

    <TextView
        android:id="@+id/alarma1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:text="@string/alarma1"
       />

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarma1"/>

    <ToggleButton
        android:id="@+id/datePickerLUN1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/lunes"
        android:textOn="@string/lunes"
        android:layout_below="@id/timePicker1"/>

    <ToggleButton
        android:id="@+id/datePickerMAR1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/martes"
        android:textOn="@string/martes"
        android:layout_alignTop="@+id/datePickerLUN1"
        android:layout_toRightOf="@+id/datePickerLUN1" />

    <ToggleButton
        android:id="@+id/datePickerMIE1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/miercoles"
        android:textOn="@string/miercoles"
        android:layout_alignTop="@+id/datePickerMAR1"
        android:layout_toRightOf="@+id/datePickerMAR1" />

    <ToggleButton
        android:id="@+id/datePickerJUE1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/jueves"
        android:textOn="@string/jueves"
        android:layout_alignTop="@+id/datePickerMIE1"
        android:layout_toRightOf="@+id/datePickerMIE1" />

    <ToggleButton
        android:id="@+id/datePickerVIE1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/viernes"
        android:textOn="@string/viernes"
        android:layout_alignTop="@+id/datePickerJUE1"
        android:layout_toRightOf="@+id/datePickerJUE1" />

    <ToggleButton
        android:id="@+id/datePickerSAB1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/sabado"
        android:textOn="@string/sabado"
        android:layout_alignTop="@+id/datePickerVIE1"
        android:layout_toRightOf="@+id/datePickerVIE1" />

    <ToggleButton
        android:id="@+id/datePickerDOM1"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:clickable="true"
        android:textOff="@string/domingo"
        android:textOn="@string/domingo"
        android:layout_alignTop="@+id/datePickerSAB1"
        android:layout_toRightOf="@+id/datePickerSAB1" />



    <Button
        android:id="@+id/guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="guardar"
        android:text="@string/guardar" />

</RelativeLayout>
