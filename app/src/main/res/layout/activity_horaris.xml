    <TextView
        android:id="@+id/spinner2_text"
        android:text="@string/origen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor = "#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6px"
        android:layout_marginLeft="4px" />

    <Spinner android:id="@+id/spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="4px"
        android:drawSelectorOnTop="true"
        android:layout_below="@+id/spinner2_text"
        />

    <TextView
        android:id="@+id/spinner3_text"
        android:text="@string/destino"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor = "#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4px"
        android:layout_below="@+id/spinner2"/>

    <Spinner android:id="@+id/spinner3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="4px"
        android:drawSelectorOnTop="true"
        android:layout_below="@+id/spinner3_text"
        />


    <LinearLayout
        android:id="@+id/selectorFecha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation = "horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinner3"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:orientation = "vertical">

            <TextView
                android:id="@+id/day_text"
                android:text="@string/dia"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor = "#ff000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:layout_marginLeft="4px" />

            <Spinner android:id="@+id/spinner_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:layout_marginLeft="4px"
                android:drawSelectorOnTop="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:orientation = "vertical">

            <TextView
                android:id="@+id/month_text"
                android:text="@string/mes"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor = "#ff000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:layout_marginLeft="4px" />

            <Spinner android:id="@+id/spinner_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:layout_marginLeft="4px"
                android:drawSelectorOnTop="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:orientation = "vertical">

            <TextView
                android:id="@+id/year_text"
                android:text="@string/anyo"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor = "#ff000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:layout_marginLeft="4px" />

            <Spinner android:id="@+id/spinner_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2px"
                android:layout_marginLeft="4px"
                android:drawSelectorOnTop="true"
                />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consultaHorarios"
        android:layout_centerInParent="true"

        android:layout_below="@+id/selectorFecha" />


</RelativeLayout>
